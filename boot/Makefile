D=../
ALL=boothead.bin
include $Dbeg.mak

kmzsiz.inc: $Dkern/kernel.sys
	@echo '; $@: Automaticly generated by Makefile, DO NOT modify me!' > $@
	@echo KMSIZ equ $(shell size $< | awk '{if (NR == 2) print $$4}') >> $@
	@echo KZSIZ equ $(shell size $< | awk '{if (NR == 2) print $$3}') >> $@

boot.asm head.asm: boot.inc kmzsiz.inc

boothead.bin: boot.bin head.bin
ifdef WIN
	copy /b boot.bin+head.bin $@
else
	cat $^ > $@
endif

include $Dend.mak
